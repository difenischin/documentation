.copy-button {
  background-color: rgba(0, 0, 0, 0.6);
  border: none;
  color: #fff;
  padding: 5px 10px;
  border-radius: 4px;
  cursor: pointer;
  font-size: 12px;
  transition: background-color 0.3s ease;
}

.copy-button:hover {
  background-color: rgba(0, 0, 0, 0.8);
}
